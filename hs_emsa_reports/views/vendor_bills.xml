<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<template id="vendor_bill_template">
			<t t-call="web.html_container">
				<t t-call="web.external_layout">
					<div class="page">
						<table>
							<thead>
								<tr>
									<th>Factura</th>
									<th>Fecha</th>
									<th>Monto</th>
								</tr>
							</thead>
							<tbody>
								<t t-foreach="docs" t-as="o">
									<tr>
										<td><span t-esc="o['number']"/></td>
										<td><span t-esc="o['date']"/></td>
										<td><span t-esc="o['amount']"/></td>
									</tr>
								</t>
							</tbody>
						</table>
					</div>
				</t>
			</t>
		</template>


		<report id="report_vendor_bill"
			string="Vendors Bill Report"
			model="account.invoice"
			name="hs_emsa_reports.vendor_bill_template"
			report_type="qweb-pdf"
			attachment_use="False"
			print_report_name="'vendor bill',)"
		/>
	</data>
</odoo>